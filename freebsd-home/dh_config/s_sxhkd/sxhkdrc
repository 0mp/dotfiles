super + shift + t
    alacritty -e sh -c " \
        xclip -o \
        | trans -show-prompt-message n -show-languages n -show-alternatives n; \
        printf '\n\n%s' 'Hit enter to close the window: '; \
        read x \
    "

super + alt + l
    slock

XF86AudioLowerVolume
    mixer vol -2

XF86AudioRaiseVolume
    mixer vol +2

XF86AudioMute
    mixer vol 0
