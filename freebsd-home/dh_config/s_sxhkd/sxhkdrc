super + shift + t
    alacritty -e sh -c " \
        xclip -o \
        | trans -show-prompt-message n -show-languages n -show-alternatives n; \
        printf '\n\n%s' 'Hit enter to close the window: '; \
        read x \
    "

super + alt + l
    slock

XF86AudioLowerVolume
    mixer -S vol -2

XF86AudioRaiseVolume
    mixer -S vol +2

XF86AudioMute
    if mixer -S pcm | grep -q 'pcm:0:0'; then \
        mixer -S pcm 100; \
    else \
        mixer -S pcm 0; \
    fi
