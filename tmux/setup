#! /bin/sh -

. ../lib.sh

set -eu

MODULE_NAME=tmux
FILES='tmux.conf'

lib_info 'setup'

case "$(uname)" in
    Darwin)
        FILES="$FILES tmux-macos.conf"
        ;;
    FreeBSD)
        FILES="$FILES tmux-freebsd.conf"
        ;;
    Linux)
        FILES="$FILES tmux-linux.conf"
        ;;
    *)
        ;;
esac

lib_back_up
trap lib_roll_back EXIT
lib_install
trap - EXIT

lib_info 'setup done'
