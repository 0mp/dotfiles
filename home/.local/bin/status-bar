#! /bin/sh -

reload() {
	exec "$0"
}

trap reload SIGUSR1

network_interface() {
	local _if
	local _ssid
	local _ip
	_if="$1"
	_ip="$(ifconfig "$_if" | awk '/\tinet /{print $2}')"
	_ssid="$(ifconfig "$_if" | awk '/\tssid /{print $2}')"
	printf -- '%s%s%s%s%s' "${_if:-...}" "${_if:+ }" "${_ssid:-}" "${_ssid:+ }" "${_ip:-}"
	printf -- ' | '
}

status_bar() {
	# Current task
	if [ -s ~/.suckless/current-task.txt ]
	then
	awk 'NR > 1{printf " -> "} {printf "%s", $0} END{printf " | "}' \
		~/.suckless/current-task.txt
	else
	printf ' '
	fi

	# Mixer
	mixer -s vol | cut -d " " -f 2
	printf ' | '

	# Eyes alert
	[ -f ~/.0mp-switch/eyes-alert-off ] && printf -- '!'
	sysctl -n hw.acpi.video.lcd0.brightness
	printf ' | '

	# Battery
	[ -f ~/.0mp-switch/battery-alert-off ] && printf -- '! '
	num_of_batteries="$(sysctl -n hw.acpi.battery.units)"
	if [ -n "${num_of_batteries}" ]
	then
		for battery in $( seq 0 "$(( num_of_batteries - 1 ))" )
		do
			if ! acpiconf -i "$battery" | awk '
				/Remaining capacity*/{printf "%s", $3}
				/State:[[:space:]]+charging/{printf "+"}
				/Remaining time:[[:space:]]+.*:.*/{printf " (%s)", $3}
			'
			then
				printf '%s' '?%'
			fi
			printf %s ' | '
		done
	fi

	# Networking
	if ! drill >/dev/null 2>&1
	then
		printf -- '! '
	fi
	network_interface wlan0

	# Date
	date +'%A, %Y-%m-%d (%B) %H:%M '
}

while xsetroot -name "$(status_bar | tr -d '\n')"
do
    sleep 2
done
