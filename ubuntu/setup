#! /bin/sh -
#
# Autostart:
# - http://askubuntu.com/q/178567/413683
#
# .desktop files:
# - https://standards.freedesktop.org/desktop-entry-spec/latest/
# - https://developer.gnome.org/integration-guide/stable/desktop-files.html.en

. ../lib.sh

set -eu

MODULE_NAME=ubuntu

CONFIG_DIR=~/.config
AUTOSTART_DIR="$CONFIG_DIR/autostart"

lib_info 'setup'

mkdir -p "$CONFIG_DIR"
mkdir -p "$AUTOSTART_DIR"
FILES="caps-lock-to-control.desktop"
PREFIX="$AUTOSTART_DIR/"
lib_back_up
trap lib_roll_back EXIT
lib_install
trap - EXIT

FILES="Xmodmap"
unset PREFIX
lib_back_up
trap lib_roll_back EXIT
lib_install
trap - EXIT

lib_info 'setup done'
