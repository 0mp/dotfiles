#! /bin/sh -

while [ -d ~/.suckless ] && [ -f ~/.suckless/status-bar.sh ]
do
    /bin/sh ~/.suckless/status-bar.sh &
    acpiconf -i0 && /bin/sh ~/.suckless/battery-alert.sh &
    sleep 2
done &
/bin/sh ~/.suckless/eyes-alert.sh &

setxkbmap pl

[ -f ~/.Xmodmap ] && xmodmap ~/.Xmodmap

# Wallpaper.
/bin/sh ~/.fehbg

exec dwm
