#! /bin/sh -

trap '[ "$SSH_AGENT_PID" ] && kill "$SSH_AGENT_PID"' EXIT

export LC_ALL=en_US.UTF-8

while [ -d ~/.suckless ] && [ -f ~/.suckless/status-bar.sh ]
do
    /bin/sh ~/.suckless/status-bar.sh &
    acpiconf -i0 >/dev/null && /bin/sh ~/.suckless/battery-alert.sh &
    sleep 2
done &
/bin/sh ~/.suckless/eyes-alert.sh &

setxkbmap pl

[ -f ~/.Xmodmap ] && xmodmap ~/.Xmodmap

# Wallpaper.
/bin/sh ~/.fehbg

eval $(ssh-agent -s)

"${@:-dwm}"
