END

BEGIN sh_die
die() {
	_rc="$1"
	shift
	printf "%s\n" "$*" >&2
	exit "$_rc"
}
END

BEGIN sh_getopts
OPTIND=1
while getopts ab: opt; do
	case "$opt" in
	a)
		echo "-a"
		;;
	b)
		echo "-b $OPTARG"
		;;
	?)
		exit 1
		;;
	esac
done
if [ "$OPTIND" -ne 0 ]; then
	shift "$(( OPTIND - 1 ))"
fi
END

