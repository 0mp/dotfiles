# Add ~/bin to the PATH unless it is already there.
case "$PATH" in
    *$HOME/bin*) ;;
    *) PATH="$HOME/bin:$PATH" ;;
esac

# Use vi mode.
set -o vi

# Use C-l in insert mode to clear the screen (it only works in normal mode
# otherwise).
bind -m vi-insert "\C-l":clear-screen

# Configure history.
HISTCONTROL=ignoredups:ignorespace:erasedups
HISTFILESIZE=20000

# C-s and C-q key bindings for the flow control should be off by default.
# http://stackoverflow.com/a/6951487/4694621
stty -ixon -ixoff
